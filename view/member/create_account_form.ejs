<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../include/title.ejs') %>

    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/create_account_form.css">
    <link rel="stylesheet" href="/css/header_nav_footer.css">

    <script src="/js/create_account_form.js"></script>

</head>
<body>
    
    <%- include('../include/header.ejs') %>
    <%- include('../include/nav.ejs') %>

    <section>
		<div id="section_wrap">
			<div class="word">
				CREATE ACCOUNT FORM
			</div>
			<div class="create_account_form">
				<form 	action="/member/create_account_confirm" 
						name="create_account_form" 
						method="post" 
						enctype="multipart/form-data">
					<input type="text" name="m_id" placeholder="INPUT ID"><br>
					<input type="password" name="m_pw" placeholder="INPUT PW"><br>
					<input type="email" name="m_mail" placeholder="INPUT MAIL"><br>
					<input type="text" name="m_phone" placeholder="INPUT PHONE"><br>
					<input type="file" name="profile_file"><br>
					<input type="button" value="create account" onclick="createAccountForm();">
					<input type="reset" value="reset">
				</form>
			</div>
            <div class="go_login_form">
				<a href="/member/member_login_form">Already have an account? login</a>
			</div>
		</div>
	</section>

    <%- include('../include/footer.ejs') %>

</body>
</html>